---
import type { Props } from '@astrojs/starlight/props'
import StarlightPage, { type StarlightPageProps } from '@astrojs/starlight/components/StarlightPage.astro'

const frontmatter: StarlightPageProps['frontmatter'] = {
  title: 'Docs Heaven',
  template: 'splash',
  hero: {
    title: 'Docs Heaven',
    tagline: 'Your personal sanctuary for documentation, notes, and knowledge management. Organized, searchable, and always accessible.',
    actions: [
      {
        text: 'Get Started',
        link: '/astro-doc-site/guides/example/',
        icon: 'right-arrow',
        variant: 'primary'
      }
    ]
  },
  features: [
    {
      title: 'Organized',
      description: 'Keep your documentation structured and easily accessible',
      icon: 'folders'
    },
    {
      title: 'Searchable',
      description: 'Find what you need quickly with powerful search capabilities',
      icon: 'magnifier'
    },
    {
      title: 'Accessible',
      description: 'Access your documents anytime, anywhere, on any device',
      icon: 'device-desktop'
    }
  ]
}
---

<style>
  /* Add custom styles for the glowing effect */
  :root {
    --glow-color: rgba(76, 29, 149, 0.5);
    --neon-color: #818cf8;
    --neon-text-shadow: 0 0 7px var(--neon-color),
                        0 0 10px var(--neon-color),
                        0 0 21px var(--neon-color),
                        0 0 42px var(--neon-color);
  }

  [data-theme='light'] {
    --neon-color: #4f46e5;
    --neon-text-shadow: 0 0 7px var(--neon-color),
                        0 0 10px var(--neon-color),
                        0 0 21px var(--neon-color);
  }

  .hero-title {
    position: relative;
    text-align: center;
    padding: 2rem;
    color: var(--sl-color-white);
    text-shadow: var(--neon-text-shadow);
    animation: flicker 3s infinite alternate;
  }

  @keyframes flicker {
    0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
      text-shadow: var(--neon-text-shadow);
    }
    20%, 22%, 24%, 55% {
      text-shadow: none;
    }
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 2rem;
  }

  .feature-card {
    padding: 1.5rem;
    border-radius: 8px;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-border);
    transition: transform 0.2s ease-in-out;
  }

  .feature-card:hover {
    transform: translateY(-5px);
  }
</style>

<StarlightPage {frontmatter}>
  <slot />
</StarlightPage>
